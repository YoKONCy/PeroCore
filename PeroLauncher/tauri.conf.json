{
    "productName": "PeroCore",
    "version": "0.1.0",
    "identifier": "com.perocore.dev",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "launcher",
                "url": "/#/launcher",
                "title": "Pero Launcher",
                "width": 900,
                "height": 600,
                "resizable": true,
                "decorations": true,
                "transparent": false,
                "alwaysOnTop": false,
                "visible": true,
                "center": true
            },
            {
                "label": "pet",
                "url": "/#/pet",
                "title": "PeroCore",
                "width": 700,
                "height": 700,
                "resizable": true,
                "minWidth": 700,
                "maxWidth": 700,
                "minHeight": 700,
                "maxHeight": 700,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "visible": false,
                "shadow": false,
                "contentProtected": false,
                "maximizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "../backend/nit_core/tools/**/*.py",
            "../backend/nit_core/tools/**/*.json",
            "../backend/nit_core/plugins/**/*.py",
            "../backend/nit_core/plugins/**/*.json",
            "../backend/models/**/*.json",
            "../backend/models/**/*.bin",
            "../backend/models/**/*.onnx",
            "../backend/assets/**/*",
            "../backend/prompts/**/*",
            "../backend/services/mdp/prompts/**/*",
            "../backend/*.py",
            "../backend/requirements.txt"
        ]
    }
}