{
    "productName": "PeroCore",
    "version": "0.1.0",
    "identifier": "com.perofamily.perocore",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "launcher",
                "url": "/#/launcher",
                "title": "Pero Launcher",
                "width": 900,
                "height": 600,
                "resizable": true,
                "decorations": true,
                "transparent": false,
                "alwaysOnTop": false,
                "visible": true,
                "center": true
            },
            {
                "label": "pet",
                "url": "/#/pet",
                "title": "PeroCore",
                "width": 700,
                "height": 700,
                "resizable": true,
                "minWidth": 700,
                "maxWidth": 700,
                "minHeight": 700,
                "maxHeight": 700,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "visible": false,
                "shadow": false,
                "contentProtected": false,
                "maximizable": false
            },
            {
                "label": "ide",
                "url": "/#/ide",
                "title": "Pero IDE",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "decorations": true,
                "transparent": false,
                "visible": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "src-tauri/python",
            "../backend/*.py",
            "../backend/core",
            "../backend/routers",
            "../backend/assets",
            "../backend/config.json",
            "../backend/models",
            "../backend/services",
            "../backend/utils",
            "../backend/nit_core",
            "../backend/nit_core/tools"
        ]
    }
}