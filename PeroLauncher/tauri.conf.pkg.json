{
    "productName": "PeroCore",
    "version": "0.1.0",
    "identifier": "com.perofamily.perocore",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Pero Launcher",
                "label": "launcher",
                "width": 800,
                "height": 600,
                "resizable": false,
                "fullscreen": false,
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "../backend/core/**/*",
            "../backend/services/**/*",
            "../backend/utils/**/*",
            "../backend/nit_core/**/*",
            "../backend/models/AuraVision/*.py",
            "../backend/models/AuraVision/weights/**/*",
            "!../backend/nit_core/plugins/social_adapter/NapCat/**/*",
            "!../backend/nit_core/plugins/social_adapter/NapCat*",
            "!../backend/data/**/*",
            "!../backend/**/*.exe",
            "!../backend/**/*.db*"
        ]
    }
}