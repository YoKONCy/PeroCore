{
    "productName": "PeroCore",
    "version": "0.1.0",
    "identifier": "com.perofamily.perocore",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "launcher",
                "url": "/#/launcher",
                "title": "Pero Launcher",
                "width": 900,
                "height": 600,
                "resizable": true,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": false,
                "visible": true,
                "maximized": false,
                "center": true,
                "shadow": true,
                "windowEffects": {
                    "effects": ["mica"],
                    "state": "active"
                }
            },
            {
                "label": "pet",
                "url": "/#/pet",
                "title": "PeroCore",
                "width": 700,
                "height": 700,
                "resizable": true,
                "minWidth": 700,
                "maxWidth": 700,
                "minHeight": 700,
                "maxHeight": 700,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "visible": false,
                "shadow": false,
                "contentProtected": false,
                "maximizable": false
            },
            {
                "label": "ide",
                "url": "/#/ide",
                "title": "Pero Chat",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "decorations": false,
                "transparent": true,
                "visible": false,
                "center": true,
                "shadow": true,
                "windowEffects": {
                    "effects": ["mica"],
                    "state": "active"
                }
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "src-tauri/python",
            "src-tauri/bin/node.exe",
            "backend_dist/*.py",
            "backend_dist/core",
            "backend_dist/routers",
            "backend_dist/assets",
            "backend_dist/models",
            "backend_dist/services",
            "backend_dist/utils",
            "backend_dist/nit_core",
            "backend_dist/rust_core/pero_memory_core.dll",
            "../public/icon.png",
            "../public/vite.svg",
            "../src/assets"
        ]
    }
}