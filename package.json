{
  "name": "pero-core",
  "private": true,
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev:electron": "concurrently -k \"tsc -p electron/tsconfig.json -w\" \"vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:electron": "node scripts/copy-gateway.js && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev wiki",
    "docs:build": "vitepress build wiki",
    "docs:preview": "vitepress preview wiki"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.11.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@element-plus/icons-vue": "^2.3.2",
    "@guolao/vue-monaco-editor": "^1.6.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.3",
    "dompurify": "^3.3.1",
    "echarts": "^6.0.0",
    "electron-store": "^11.0.2",
    "element-plus": "^2.13.0",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "highlight.js": "^11.11.1",
    "lucide-vue-next": "^0.562.0",
    "marked": "^17.0.1",
    "monaco-editor": "^0.55.1",
    "protobufjs": "^8.0.0",
    "systeminformation": "^5.30.6",
    "three": "^0.182.0",
    "tree-kill": "^1.2.2",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4",
    "which": "^6.0.0",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.10",
    "@types/systeminformation": "^3.23.1",
    "@types/three": "^0.182.0",
    "@types/which": "^3.0.4",
    "@types/winreg": "^1.2.36",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "ts-proto": "^2.11.1",
    "vite": "npm:rolldown-vite@^7.2.5",
    "vitepress": "^1.6.4",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@^7.2.5"
  },
  "build": {
    "appId": "com.perocore.dev",
    "productName": "PeroCore",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/gateway.exe",
        "to": "bin/gateway.exe"
      },
      {
        "from": "resources/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/venv",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/.git*",
          "!**/.DS_Store",
          "!**/target",
          "!**/node_modules",
          "!**/*.rs",
          "!**/Cargo.toml",
          "!**/Cargo.lock",
          "!**/*.pdb",
          "!**/nit_core/plugins/social_adapter/NapCat"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
