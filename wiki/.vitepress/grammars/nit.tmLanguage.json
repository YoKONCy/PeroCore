{
  "scopeName": "source.nit",
  "name": "nit",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#tags"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "match": "#.*$",
      "name": "comment.line.number-sign.nit"
    },
    "strings": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.nit"
    },
    "tags": {
      "match": "</?nit(?:-[a-zA-Z0-9]+)?>",
      "name": "entity.name.tag.nit"
    },
    "keywords": {
      "match": "\\b(async|true|false)\\b",
      "name": "keyword.control.nit"
    },
    "variables": {
      "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*",
      "name": "variable.other.nit"
    },
    "functions": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": {
          "name": "entity.name.function.nit"
        }
      }
    },
    "numbers": {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.nit"
    },
    "operators": {
      "match": "=",
      "name": "keyword.operator.assignment.nit"
    }
  }
}
